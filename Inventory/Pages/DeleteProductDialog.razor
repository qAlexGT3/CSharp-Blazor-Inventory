@using Inventory.Data.Models;

<MudDialog>
    <DialogContent>
        @if(ToDeleteProduct != null)
        {
            <span>
                Do you want to delete '@ToDeleteProduct.Name' with part number '@ToDeleteProduct.PartNumber'?
            </span>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@inject ISnackbar Snackbar

@code
{
    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }

    [Parameter] public Product? ToDeleteProduct { get; set; }

    void Cancel()
    {
        if (MudDialog != null)
        {
            MudDialog.Cancel();
        }
    }

    void Submit()
    {
        if (MudDialog != null)
        {
            MudDialog.Close(DialogResult.Ok(true));
        }
    }
}